package controller.file;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileWriter;

import javax.swing.JTextArea;

public interface SaveFile {
	
	//read text data from JtextArea
	//return BufferedReader contained text data
	public BufferedReader readTextArea(JTextArea text_area);
	
	//save text buffers to file in file path
	public boolean saveFile(String file_path, FileWriter file_writer, BufferedWriter text_buffers);
	
}
