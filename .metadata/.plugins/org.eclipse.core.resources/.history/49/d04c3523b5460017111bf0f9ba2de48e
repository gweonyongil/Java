			for(Paragraph right_par : Right_contents){
				if(left_par.line.contains)				
			}
		}
		
	}
	
	private int CountMatchedLine(Paragraph left_par, Paragraph right_par){
		
		boolean not_end_of_par = true;
		int matching_count = 0;
		
		for(int i = 0, j = 0; left_par.line.get(i) != null || right_par.line.get(j) != null;){
			if(left_par.line.get(i).equals(right_par.line.get(j))){
				matching_count++;
				j++;
			}
		}
		
		return matching_count;
	}

}
