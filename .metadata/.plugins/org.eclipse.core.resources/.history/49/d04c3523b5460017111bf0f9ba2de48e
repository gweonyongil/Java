package controller.compare;

import java.util.ArrayList;

import javax.swing.JTextArea;

public class CompareParagraph implements CmpParagraph{

	@Override
	public ArrayList<Paragraph> constructPG(JTextArea contents) {
		// TODO Auto-generated method stub
		
		ArrayList<Paragraph> contents_par = new ArrayList<>();
				
		String[] contents_str = contents.getText().split("\\n");
		
		Paragraph par = new Paragraph();
		int line_count = 0;
		for(String str : contents_str){
			line_count++;
			if(str.isEmpty()){
				par.ending_line_num = line_count - 1;
				contents_par.add(par);
				par = new Paragraph();
				par.starting_line_num = line_count;
			}
			else{
				Line str_line = new NotComparedLine(str);
				par.line.add(str_line);
			}
		}
		return contents_par;
		
	}

	@Override
	public void matchSimilarPG(ArrayList<Paragraph> Left_contents, ArrayList<Paragraph> Right_contents) {
		// TODO Auto-generated method stub
		
		int matching_count = 0;
		
